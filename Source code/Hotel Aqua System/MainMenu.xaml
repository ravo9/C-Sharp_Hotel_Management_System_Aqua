<Window x:Class="Hotel_Aqua_System.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Aqua_System"
        mc:Ignorable="d"
        Title="MainMenu" Height="720" Width="1280" WindowStartupLocation="Manual" WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/img/background_left.JPG"/>
        </Grid.Background>
        <Button x:Name="btn1" Content="Orders" HorizontalAlignment="Left" Margin="845,310,0,0" VerticalAlignment="Top" Width="305" Height="50" Click="btn1_Click"/>
        <Button x:Name="btn2" Content="Clients" HorizontalAlignment="Left" Margin="845,395,0,0" VerticalAlignment="Top" Width="305" Height="50" Click="btn2_Click"/>
        <Button x:Name="btn3" Content="Rooms Configuration" HorizontalAlignment="Left" Margin="845,480,0,0" VerticalAlignment="Top" Width="305" RenderTransformOrigin="-0.133,0.5" Height="50" Click="btn3_Click"/>

    </Grid>
</Window>
